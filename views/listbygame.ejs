<!doctype html>
<html>

<head>
  <title>Reviews List by Game</title>
  <link rel="stylesheet" type="text/css" href="/main.css" />
</head>

<body>
  <header>
    <div class="logo">
      <a href="/"><%= siteData.siteName %></a>
    </div>
    <nav>
      <p><a href="/">Home</a></p>
      <% if (user) { %>
        <p>Logged in as: <%= user.username %> | <a href="/users/logout">Logout</a></p>
      <% } else { %>
        <p><a href="/users/login">Login</a> | <a href="/users/register">Register</a></p>
      <% } %>
    </nav>
  </header>

  <main>
    <h1>Reviews List by Game</h1>
    <ul class="reviews-list">
      <% reviews_list.forEach(function(review) { %>
        <li class="review-item">
          <strong><%= review.game_name %></strong><br>
          <strong><%= review.headline %></strong><br>
          <strong>Created At:</strong> <%= new Date(review.created_at).toLocaleDateString() %> <strong>By:</strong> <%= review.username %><br>
          <strong>Review:</strong> <%= review.review_text %><br>
          <strong>Score:</strong> <%= review.score %><br>
        </li>
      <% }); %>
    </ul>
    <div class="navigation-links">
      <p><a href="/reviews/search_bygame">Back to Reviews by Game</a></p>
    </div>
  </main>

  <footer>
    <p>GoldGameReviews</p>
    <p>Created by: Noah Tambala (ntamb002)</p>
    <p>Contact: ntamb002@gold.ac.uk</p>
  </footer>
</body>

</html>